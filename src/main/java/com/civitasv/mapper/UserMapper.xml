<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.civitasv.mapper.UserMapper">
    <resultMap id="base" type="User">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="phone" column="phone"/>
        <result property="password" column="password"/>
    </resultMap>
    <resultMap id="all" type="User">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="phone" column="phone"/>
        <result property="password" column="password"/>
        <collection property="roles" column="id"
                    select="com.civitasv.mapper.RoleMapper.getRoleByUserId"/>
    </resultMap>
    <select id="get" resultMap="all">
        select *
        from user
        where id = #{id}
          and password = #{password}
    </select>

    <select id="getByUserId" resultMap="all">
        select *
        from user
        where id = #{id}
    </select>

    <insert id="add">
        insert into user
        values (#{id}, #{name}, #{phone}, #{password})
    </insert>

    <delete id="delete">
        delete
        from user
        where id = #{id}
    </delete>

    <update id="update">
        update user
        set name     = #{name},
            phone    = #{phone},
            password = #{password}
        where id = #{id}
    </update>

    <select id="getPwdByUserId" resultType="java.lang.String">
        select password
        from user
        where id = #{id}
    </select>

    <select id="getAll" resultMap="all">
        select *
        from user
    </select>

    <select id="getUsersByName" resultMap="all">
        select *
        from user
        where name = #{name}
    </select>

    <select id="getUsersByPhone" resultMap="all">
        select *
        from user
        where phone = #{phone}
    </select>

    <select id="getUserByRoleId" resultMap="base">
        select id, name, phone, password
        from user u,
             user_role ur
        where u.id = ur.user_id
          and ur.role_id = #{roleId}
    </select>
</mapper>